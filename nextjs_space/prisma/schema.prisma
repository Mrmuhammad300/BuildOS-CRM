// ==============================
// Time Tracking & Labor Management
// ==============================

enum TimeEntryStatus {
  Draft
  Submitted
  Approved
  Rejected
}

model Crew {
  id              String        @id @default(cuid())
  name            String
  description     String?       @db.Text
  
  // Skills & Certifications
  skills          String[]      // Array of skill names
  
  // Relations
  members         CrewMember[]
  timeEntries     TimeEntry[]
  
  // Status
  isActive        Boolean       @default(true)
  
  // Timestamps
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  @@index([isActive])
}

model CrewMember {
  id              String        @id @default(cuid())
  
  // Crew Reference
  crewId          String
  crew            Crew          @relation(fields: [crewId], references: [id], onDelete: Cascade)
  
  // User Reference
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Role in crew
  role            String        // e.g., "Foreman", "Carpenter", "Laborer"
  hourlyRate      Float?
  
  // Status
  isActive        Boolean       @default(true)
  joinedAt        DateTime      @default(now())
  leftAt          DateTime?
  
  // Timestamps
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  @@unique([crewId, userId])
  @@index([crewId])
  @@index([userId])
}

model TimeEntry {
  id              String            @id @default(cuid())
  
  // User Reference
  userId          String
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Project Reference
  projectId       String
  project         Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // Crew Reference (optional)
  crewId          String?
  crew            Crew?             @relation(fields: [crewId], references: [id])
  
  // Time Details
  date            DateTime
  hoursWorked     Float
  overtimeHours   Float             @default(0)
  
  // Work Details
  taskDescription String            @db.Text
  costCode        String?           // For accounting integration
  
  // Equipment/Tools Used
  equipmentUsed   String[]          // Array of equipment IDs or names
  
  // Status & Approval
  status          TimeEntryStatus   @default(Draft)
  approvedById    String?
  approvedBy      User?             @relation("TimeEntryApprover", fields: [approvedById], references: [id])
  approvedAt      DateTime?
  
  // Labor Cost (calculated)
  laborCost       Float?
  overtimeCost    Float?
  
  // Notes
  notes           String?           @db.Text
  
  // Timestamps
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  
  @@index([userId])
  @@index([projectId])
  @@index([crewId])
  @@index([date])
  @@index([status])
}

// ==============================
// Equipment & Material Management
// ==============================

enum EquipmentStatus {
  Available
  InUse
  Maintenance
  OutOfService
  Rented
}

enum OwnershipType {
  Owned
  Rented
  Leased
}

model Equipment {
  id                    String            @id @default(cuid())
  
  // Equipment Details
  name                  String
  model                 String?
  serialNumber          String?           @unique
  description           String?           @db.Text
  
  // Ownership
  ownershipType         OwnershipType     @default(Owned)
  purchaseDate          DateTime?
  purchasePrice         Float?
  rentalDailyRate       Float?
  
  // Status
  status                EquipmentStatus   @default(Available)
  
  // Current Assignment (optional)
  currentProjectId      String?
  currentProject        Project?          @relation("EquipmentCurrentProject", fields: [currentProjectId], references: [id])
  
  // Maintenance
  lastMaintenanceDate   DateTime?
  nextMaintenanceDate   DateTime?
  maintenanceIntervalDays Int?
  maintenanceHistory    MaintenanceRecord[]
  
  // Usage Tracking
  totalHoursUsed        Float             @default(0)
  
  // Requisitions
  materialRequisitions  MaterialRequisition[]
  
  // Timestamps
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  
  @@index([status])
  @@index([currentProjectId])
}

model MaintenanceRecord {
  id                String        @id @default(cuid())
  
  // Equipment Reference
  equipmentId       String
  equipment         Equipment     @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  
  // Maintenance Details
  maintenanceDate   DateTime
  description       String        @db.Text
  cost              Float?
  
  // Performed By
  performedBy       String?       // Name or company
  
  // Next Maintenance
  nextMaintenanceDate DateTime?
  
  // Timestamps
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  @@index([equipmentId])
  @@index([maintenanceDate])
}

enum MaterialStatus {
  Requested
  Ordered
  InTransit
  Delivered
  Cancelled
}

model MaterialRequisition {
  id                  String          @id @default(cuid())
  
  // Project Reference
  projectId           String
  project             Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // Requester
  requestedById       String
  requestedBy         User            @relation(fields: [requestedById], references: [id])
  
  // Material Details
  materialName        String
  description         String?         @db.Text
  quantity            Float
  unit                String          // e.g., "EA", "LF", "SF", "CY"
  
  // Vendor & Pricing
  vendorName          String?
  vendorContact       String?
  estimatedCost       Float?
  actualCost          Float?
  
  // Delivery
  requestedDate       DateTime
  expectedDeliveryDate DateTime?
  actualDeliveryDate  DateTime?
  deliveryLocation    String?
  
  // Status
  status              MaterialStatus  @default(Requested)
  
  // Equipment Reference (if material is equipment)
  equipmentId         String?
  equipment           Equipment?      @relation(fields: [equipmentId], references: [id])
  
  // Notes
  notes               String?         @db.Text
  
  // Timestamps
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  
  @@index([projectId])
  @@index([requestedById])
  @@index([status])
  @@index([requestedDate])
}

