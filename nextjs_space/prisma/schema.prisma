  SUBMITTAL
  CHANGE_ORDER
  PUNCH_ITEM
  DAILY_REPORT
  DOCUMENT
  DESIGN
  SYSTEM
}

model Notification {
  id              String              @id @default(cuid())
  
  // User Reference
  userId          String
  user            User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Notification Details
  type            NotificationType
  category        NotificationCategory
  title           String
  message         String              @db.Text
  
