model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Real Estate Development Enums
enum AssetType {
  Residential
  Multifamily
  MixedUse
  Industrial
  Agricultural
  SpecialPurpose
}

enum DevelopmentStage {
  PreDevelopment
  Construction
  Stabilized
  Exit
}

enum StatusIndicator {
  Green
  Yellow
  Red
}

// Real Estate Development Property Model
model Property {
  id                      String            @id @default(uuid())
  createdAt               DateTime          @default(now())
  updatedAt               DateTime          @updatedAt

  // Property Profile
  name                    String
  street                  String
  city                    String
  state                   String
  zip                     String
  assetType               AssetType
  developmentStage        DevelopmentStage
  units                   Int?
  squareFeet              Int?
  acquisitionDate         DateTime?
  holdPeriodYears         Int?

  // Executive Summary
  purchasePrice           Float
  totalProjectCost        Float
  equityInvested          Float
  debtAmount              Float
  targetIRR               Float?
  targetCashOnCash        Float?
  statusIndicator         StatusIndicator   @default(Green)

  // Capital Stack
  hardCosts               Float             @default(0)
  softCosts               Float             @default(0)
  financingCosts          Float             @default(0)
  contingency             Float             @default(0)

  // Debt Details
  debtInterestRate        Float?
  debtTermYears           Int?
  debtAmortizationYears   Int?

  // Operating Assumptions
  avgMonthlyRentPerUnit   Float             @default(0)
  otherIncomeMonthly      Float             @default(0)
  vacancyRate             Float             @default(0.05)
  expenseRatio            Float             @default(0.40)
  annualRentGrowthRate    Float             @default(0.03)
  annualExpenseGrowthRate Float             @default(0.03)

  // Exit Assumptions
  exitCapRate             Float             @default(0.06)
  saleCostPercentage      Float             @default(0.05)

  // Relationships
  projectId               String?
  project                 Project?          @relation(fields: [projectId], references: [id])
  
  ownerId                 String?
  owner                   User?             @relation(fields: [ownerId], references: [id])

  // Financial snapshots can be stored separately if needed
  @@index([assetType])
  @@index([developmentStage])
  @@index([projectId])
}

enum DesignRequestStatus {
  Draft
  Submitted
  AIProcessing
  UnderReview
  ClientReview
  RevisionRequired
  Approved
  InDesign
  Rendering
  Completed
  Cancelled
}

enum DesignProjectType {
  Residential
  Commercial
  Industrial
  MixedUse
  Renovation
  LandscapingInterior
}

enum DesignTimeline {
  Rush
  Standard
  Flexible
}

enum DesignTaskType {
  Architectural
  Structural
  MEPDesign
  InteriorDesign
  Landscaping
  Rendering
  ThreeD_Modeling
  Documentation
}

enum TaskStatus {
  Pending
  Queued
  Processing
  Completed
  Failed
  Cancelled
}

model DesignRequest {
  id                    String                 @id @default(cuid())
  requestNumber         String                 @unique
  
  // Client Information
  clientName            String
  clientEmail           String
  clientPhone           String?
  
  // Project Details
  projectName           String
  projectType           DesignProjectType
  description           String                 @db.Text
  requirements          String                 @db.Text
  siteDetails           String?                @db.Text
  budget                Float?
  timeline              DesignTimeline
  
  // Status & Tracking
  status                DesignRequestStatus    @default(Draft)
  submittedAt           DateTime?
  approvedAt            DateTime?
  completedAt           DateTime?
  
  // AI Analysis Results
  aiAnalysisCompleted   Boolean                @default(false)
  designConcept         String?                @db.Text
  styleRecommendations  String?                @db.Text
  spatialLayout         String?                @db.Text
  materialSuggestions   String?                @db.Text
  sustainabilityFeatures String?               @db.Text
  budgetConsiderations  String?                @db.Text
  timelineEstimate      String?                @db.Text
  visualizationPrompt   String?                @db.Text
  
  // Design Visualization
  visualizationUrl      String?
  driveFileId           String?
  driveFileLink         String?
  
  // Client Feedback
  revisionNotes         String?                @db.Text
  revisionCount         Int                    @default(0)
  
  // External Platform Integration
  externalRequestId     String?                // ID from AI design platform
  externalStatus        String?
  webhookUrl            String?
  lastWebhookSync       DateTime?
  
  // Timestamps
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  
  // Relationships
  projectId             String?
  project               Project?               @relation(fields: [projectId], references: [id])
  
  submittedById         String?
  submittedBy           User?                  @relation("DesignRequestSubmittedBy", fields: [submittedById], references: [id])
  
  assignedToId          String?
  assignedTo            User?                  @relation("DesignRequestAssignedTo", fields: [assignedToId], references: [id])
  
  tasks                 DesignTask[]
  
  @@index([status])
  @@index([projectType])
  @@index([projectId])
  @@index([submittedById])
  @@index([createdAt])
}

model DesignTask {
  id                    String                 @id @default(cuid())
  
  // Task Details
  taskType              DesignTaskType
  title                 String
  description           String                 @db.Text
  priority              RFIPriority            @default(Normal)
  
  // Status & Tracking
  status                TaskStatus             @default(Pending)
  startedAt             DateTime?
  completedAt           DateTime?
  
  // External Platform Integration
  sentToExternalPlatform Boolean               @default(false)
  externalTaskId        String?                // ID from AI design platform
  externalStatus        String?
  externalResponse      String?                @db.Text
  webhookPayload        String?                @db.Text
  webhookResponse       String?                @db.Text
  lastSyncAt            DateTime?
  
  // Results
  resultUrl             String?
  resultData            String?                @db.Text
  resultFiles           String[]               @default([])
  
  // Error Handling
  errorMessage          String?                @db.Text
  retryCount            Int                    @default(0)
  
  // Timestamps
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  
  // Relationships
  designRequestId       String
  designRequest         DesignRequest          @relation(fields: [designRequestId], references: [id], onDelete: Cascade)
  
  assignedToId          String?
  assignedTo            User?                  @relation("DesignTaskAssignedTo", fields: [assignedToId], references: [id])
  
  @@index([status])
  @@index([taskType])
  @@index([designRequestId])
  @@index([createdAt])
}

// ==============================
// BuildOS AI Features
// ==============================

enum AnalysisType {
  General
  Safety
  Cost
  Timeline
  Compliance
  Quality
}

enum CRMProvider {
  Salesforce
  HubSpot
  Zoho
  Pipedrive
  Custom
}

model DocumentAnalysis {
  id                    String                 @id @default(cuid())
  
  // Document Reference
  documentId            String?
  document              Document?              @relation(fields: [documentId], references: [id], onDelete: Cascade)
  
  // Project Reference
  projectId             String
  project               Project                @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // User Reference
  userId                String
  user                  User                   @relation(fields: [userId], references: [id])
  
  // Analysis Details
  analysisType          AnalysisType           @default(General)
  documentText          String                 @db.Text
  analysisResult        String                 @db.Text
  aiModel               String?                // e.g., "gpt-4", "minimax"
  confidence            Float?                 // 0.0 to 1.0
  
  // Metadata
  processingTime        Int?                   // milliseconds
  tokensUsed            Int?
  
  // Timestamps
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  
  @@index([projectId])
  @@index([userId])
  @@index([analysisType])
  @@index([createdAt])
}

model CRMIntegration {
  id                    String                 @id @default(cuid())
  
  // User Reference
  userId                String
  user                  User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Integration Details
  provider              CRMProvider
  name                  String                 // User-friendly name
  apiKey                String?                // Encrypted API key
  apiSecret             String?                // For OAuth
  accessToken           String?                // OAuth access token
  refreshToken          String?                // OAuth refresh token
  webhookUrl            String?                // For custom integrations
  
  // Configuration
  config                String?                @db.Text // JSON config
  
  // Status
  isActive              Boolean                @default(true)
  lastSyncAt            DateTime?
  lastError             String?                @db.Text
  syncCount             Int                    @default(0)
  
  // Timestamps
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  
  @@index([userId])
  @@index([provider])
  @@index([isActive])
}

model AIProjectPlan {
  id                    String                 @id @default(cuid())
  
  // Project Reference
  projectId             String                 @unique
  project               Project                @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // User Reference
  userId                String
  user                  User                   @relation(fields: [userId], references: [id])
  
  // Plan Details
  planData              String                 @db.Text // JSON structure
  phases                String                 @db.Text // JSON array of phases
  milestones            String                 @db.Text // JSON array of milestones
  riskAnalysis          String?                @db.Text
  budgetBreakdown       String?                @db.Text // JSON budget data
  
  // AI Generation
  aiModel               String?
  promptUsed            String?                @db.Text
  generationTime        Int?                   // milliseconds
  
  // Version Control
  version               Int                    @default(1)
  
  // Timestamps
