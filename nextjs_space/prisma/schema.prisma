datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum UserRole {
  Admin
  ProjectManager
  Superintendent
  FieldStaff
  Architect
  Engineer
  Owner
}

enum ProjectStatus {
  PreConstruction
  Active
  OnHold
  Completed
}

enum ProjectPhase {
  Planning
  Foundation
  Framing
  MEP
  Finishing
  Closeout
}

enum RFIStatus {
  Open
  InReview
  DraftResponse
  OfficialResponse
  Closed
}

enum RFIPriority {
  Low
  Normal
  High
  Critical
}

enum DocumentCategory {
  Contracts
  Drawings
  Specifications
  Photos
  Reports
  Other
}

enum Discipline {
  Architectural
  Structural
  MEP
  Civil
  General
}

enum WeatherCondition {
  Clear
  PartlyCloudy
  Cloudy
  Rain
  Snow
  Fog
  Wind
}

model User {
  id                String           @id @default(cuid())
  email             String           @unique
  password          String?
  firstName         String
  lastName          String
  role              UserRole         @default(FieldStaff)
  emailVerified     DateTime?
  image             String?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  
  // Relations
  projectsManaged   Project[]        @relation("ProjectManager")
  projectsSupervised Project[]       @relation("Superintendent")
  projectsArchitect Project[]        @relation("Architect")
  projectsEngineer  Project[]        @relation("Engineer")
  projectTeams      ProjectTeam[]
  rfisSubmitted        RFI[]                @relation("SubmittedBy")
  rfisAssigned         RFI[]                @relation("AssignedTo")
  rfiResponses         RFIResponse[]
  rfiComments          RFIComment[]
  submittalsSubmitted  Submittal[]          @relation("SubmittedBy")
  submittalsAssigned   Submittal[]          @relation("AssignedTo")
  submittalResponses   SubmittalResponse[]
  submittalComments    SubmittalComment[]
  dailyReports         DailyReport[]
  documentsUploaded    Document[]           @relation("UploadedBy")
  documentVersions     DocumentVersion[]
  changeOrdersRequested ChangeOrder[]       @relation("ChangeOrderRequester")
  changeOrdersApproved  ChangeOrder[]       @relation("ChangeOrderApprover")
  punchItemsIdentified  PunchItem[]         @relation("PunchItemIdentifier")
  punchItemsAssigned    PunchItem[]         @relation("PunchItemAssignee")
  punchItemsVerified    PunchItem[]         @relation("PunchItemVerifier")
  designRequestsSubmitted DesignRequest[]   @relation("DesignRequestSubmittedBy")
  designRequestsAssigned  DesignRequest[]   @relation("DesignRequestAssignedTo")
  designTasksAssigned     DesignTask[]      @relation("DesignTaskAssignedTo")
  
  // AutoBuild AI Relations
  documentAnalyses        DocumentAnalysis[]
  crmIntegrations         CRMIntegration[]
  aiProjectPlans          AIProjectPlan[]
  
  // NextAuth fields
  properties            Property[]
  accounts          Account[]
  sessions          Session[]
  name              String?
  phone             String?
  companyName       String?
}

model Project {
  id                  String         @id @default(cuid())
  name                String
  client              String
  projectNumber       String         @unique
  address             String
  city                String?
  state               String?
  zipCode             String?
  startDate           DateTime
  estimatedCompletion DateTime
  actualCompletion    DateTime?
  budget              Float
  status              ProjectStatus  @default(PreConstruction)
  phase               ProjectPhase   @default(Planning)
  description         String?        @db.Text
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
  
  // Team members
  projectManagerId    String?
  projectManager      User?          @relation("ProjectManager", fields: [projectManagerId], references: [id])
  superintendentId    String?
  superintendent      User?          @relation("Superintendent", fields: [superintendentId], references: [id])
  architectId         String?
  architect           User?          @relation("Architect", fields: [architectId], references: [id])
  engineerId          String?
  engineer            User?          @relation("Engineer", fields: [engineerId], references: [id])
  
  // Relations
  team                ProjectTeam[]
  rfis                RFI[]
  submittals          Submittal[]
  dailyReports        DailyReport[]
  documents           Document[]
  changeOrders        ChangeOrder[]
  punchItems          PunchItem[]
  properties          Property[]
  designRequests      DesignRequest[]
  
  // AutoBuild AI Relations
  documentAnalyses    DocumentAnalysis[]
  aiProjectPlan       AIProjectPlan?
}

model ProjectTeam {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  role      String
  createdAt DateTime @default(now())
  
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([projectId, userId])
}

model RFI {
  id                  String       @id @default(cuid())
  rfiNumber           String       @unique
  projectId           String
  subject             String
  question            String       @db.Text
  drawingReference    String?
  specSection         String?
  priority            RFIPriority  @default(Normal)
  status              RFIStatus    @default(Open)
  dueDate             DateTime?
  costImpact          Boolean      @default(false)
  scheduleImpact      Boolean      @default(false)
  estimatedDelayDays  Int?
  submittedById       String
  assignedToId        String?
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  closedAt            DateTime?
  
  project             Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  submittedBy         User         @relation("SubmittedBy", fields: [submittedById], references: [id])
  assignedTo          User?        @relation("AssignedTo", fields: [assignedToId], references: [id])
  
  responses           RFIResponse[]
  comments            RFIComment[]
  attachments         String[]     @default([])
  distributionList    String[]     @default([])
}

model RFIResponse {
  id          String   @id @default(cuid())
  rfiId       String
  response    String   @db.Text
  respondedById String
  isDraft     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  rfi         RFI      @relation(fields: [rfiId], references: [id], onDelete: Cascade)
  respondedBy User     @relation(fields: [respondedById], references: [id])
}

model RFIComment {
  id        String   @id @default(cuid())
  rfiId     String
  comment   String   @db.Text
  authorId  String
  createdAt DateTime @default(now())
  
  rfi       RFI      @relation(fields: [rfiId], references: [id], onDelete: Cascade)
  author    User     @relation(fields: [authorId], references: [id])
}

model DailyReport {
  id                      String           @id @default(cuid())
  projectId               String
  date                    DateTime
  submittedById           String
  
  // Weather
  weatherCondition        WeatherCondition?
  temperatureHigh         Float?
  temperatureLow          Float?
  precipitation           Float?
  windSpeed               Float?
  
  // Workforce
  contractorWorkers       Int?             @default(0)
  subcontractorWorkers    Int?             @default(0)
  tradesOnSite            String[]         @default([])
  
  // Work Performed
  workPerformed           String?          @db.Text
  equipmentOnSite         String[]         @default([])
  materialsDelivered      String[]         @default([])
  
  // Safety
  incidentsCount          Int?             @default(0)
  nearMissesCount         Int?             @default(0)
  safetyViolations        String[]         @default([])
  ppeComplianceStatus     String?
  
  // Issues and Delays
  issuesAndDelays         String?          @db.Text
  
  // Photos
  photos                  String[]         @default([])
  
  // Inspections
  inspectionsConducted    String[]         @default([])
  
  createdAt               DateTime         @default(now())
  updatedAt               DateTime         @updatedAt
  
  project                 Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  submittedBy             User             @relation(fields: [submittedById], references: [id])
  
  @@unique([projectId, date])
}

model Submittal {
  id                 String              @id @default(cuid())
  submittalNumber    String              @unique
  title              String
  specSection        String?
  type               SubmittalType       @default(ProductData)
  description        String?
  status             SubmittalStatus     @default(ContractorReview)
  reviewStatus       ReviewStatus?
  priority           RFIPriority         @default(Normal)
  
  // Dates
  submittedDate      DateTime            @default(now())
  requiredOnSiteDate DateTime?
  dueDate            DateTime?
  approvedDate       DateTime?
  
  // Relationships
  projectId          String
  project            Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  submittedById      String
  submittedBy        User                @relation("SubmittedBy", fields: [submittedById], references: [id])
  
  assignedToId       String?
  assignedTo         User?               @relation("AssignedTo", fields: [assignedToId], references: [id])
  
  // Lead time
  leadTimeDays       Int?
  
  // Workflow tracking
  currentStep        String              @default("contractor_review")
  
  // Review comments
  reviewComments     String?
  
  // Versions and responses
  responses          SubmittalResponse[]
  comments           SubmittalComment[]
  
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}

model SubmittalResponse {
  id            String     @id @default(cuid())
  submittalId   String
  submittal     Submittal  @relation(fields: [submittalId], references: [id], onDelete: Cascade)
  
  response      String     @db.Text
  reviewStatus  ReviewStatus
  isDraft       Boolean    @default(false)
  
  respondedById String
  respondedBy   User       @relation(fields: [respondedById], references: [id])
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model SubmittalComment {
  id          String    @id @default(cuid())
  submittalId String
  submittal   Submittal @relation(fields: [submittalId], references: [id], onDelete: Cascade)
  
  comment     String    @db.Text
  
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
  
  createdAt   DateTime  @default(now())
}

enum SubmittalType {
  ProductData
  ShopDrawings
  Samples
  MockUps
  DesignData
  TestReports
  Certificates
  Manuals
  Warranties
  Other
}

enum SubmittalStatus {
  ContractorReview
  SubmittedToArchitect
  ArchitectReview
  EngineerReview
  OwnerReview
  FinalApproval
  Closed
}

enum ReviewStatus {
  Approved
  ApprovedAsNoted
  ReviseAndResubmit
  Rejected
}

model Document {
  id            String            @id @default(cuid())
  projectId     String
  filename      String
  category      DocumentCategory
  discipline    Discipline
  cloudStoragePath String
  isPublic      Boolean           @default(false)
  isCurrent     Boolean           @default(true)
  uploadedById  String
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  
  project       Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  uploadedBy    User              @relation("UploadedBy", fields: [uploadedById], references: [id])
  versions      DocumentVersion[]
  
  // AutoBuild AI Relations
  analyses      DocumentAnalysis[]
}

model DocumentVersion {
  id              String   @id @default(cuid())
  documentId      String
  versionNumber   Int
  cloudStoragePath String
  isPublic        Boolean  @default(false)
  changeNotes     String?  @db.Text
  uploadedById    String
  createdAt       DateTime @default(now())
  
  document        Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  uploadedBy      User     @relation(fields: [uploadedById], references: [id])
  
  @@unique([documentId, versionNumber])
}

// Budget & Change Order models
model ChangeOrder {
  id                String            @id @default(cuid())
  changeOrderNumber String            @unique
  title             String
  description       String            @db.Text
  type              ChangeOrderType   @default(Scope)
  status            ChangeOrderStatus @default(Draft)
  priority          RFIPriority       @default(Normal)
  
  // Financial
  proposedCost      Float
  approvedCost      Float?
  actualCost        Float?
  
  // Dates
  requestedDate     DateTime          @default(now())
  approvedDate      DateTime?
  completedDate     DateTime?
  
  // Impact
  scheduleImpact    Int?              // Days added/reduced
  reason            String?           @db.Text
  justification     String?           @db.Text
  
  // Relations
  projectId         String
  project           Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  requestedById     String
  requestedBy       User              @relation("ChangeOrderRequester", fields: [requestedById], references: [id])
  
  approvedById      String?
  approvedBy        User?             @relation("ChangeOrderApprover", fields: [approvedById], references: [id])
  
  attachments       String[]
  
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}

// Punch List models
model PunchItem {
  id                String           @id @default(cuid())
  itemNumber        String           @unique
  title             String
  description       String           @db.Text
  location          String
  trade             String?
  status            PunchItemStatus  @default(Open)
  priority          RFIPriority      @default(Normal)
  
  // Dates
  identifiedDate    DateTime         @default(now())
  dueDate           DateTime?
  completedDate     DateTime?
  verifiedDate      DateTime?
  
  // Cost tracking
  estimatedCost     Float?
  actualCost        Float?
  
  // Relations
  projectId         String
  project           Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  identifiedById    String
  identifiedBy      User             @relation("PunchItemIdentifier", fields: [identifiedById], references: [id])
  
  assignedToId      String?
  assignedTo        User?            @relation("PunchItemAssignee", fields: [assignedToId], references: [id])
  
  verifiedById      String?
  verifiedBy        User?            @relation("PunchItemVerifier", fields: [verifiedById], references: [id])
  
  attachments       String[]
  notes             String?          @db.Text
  
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}

